@model Projeto01.Models.Categoria

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Edit</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.unobtrosive.js"></script>

    @using (Html.BeginForm()) { 
        @Html.AntiForgeryToken();

        <div class="form-horizontal">
            <h4>Categoria</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" }) 
            @Html.HiddenFor(model => model.CategoriaId) @{// Inclui na visão, de forma escondida, a informação do campo do modelo indicado.
            }

            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Nome, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Alterar" class="btn btn-default">
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Retornar para lista", "Index")
    </div>   
</body>
</html>